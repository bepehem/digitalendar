<form method="post" action="{{ path('event_delete', {'slug': event.slug}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cet événement?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.slug) }}">
    <button class="btn btn-group-lg btn-outline-danger">Supprimer</button>
</form>
