{% for events in event %}

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <img src="{{ asset('uploads/' ~ events.picture) }}" alt="events-picture">
        <div class="card-body">
            <h3 class="card-text">{{ events.title }}</h3>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="{{ path('event_show', {'slug': events.slug}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                    {% if app.user %}
                    <a href="{{ path('event_edit', {'slug': events.slug}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    {% endif %}
                </div>
                <small class="text-muted">{{ events.city }} / {{ events.dateStart|date('d-m-Y') }}</small>
            </div>
        </div>
    </div>
</div>

{% endfor %}