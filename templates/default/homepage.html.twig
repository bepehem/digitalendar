{% extends 'base.html.twig' %}

{% block title %}Digitalendar{% endblock %}

{% block body %}

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Digitalendar</h1>
            <p class="lead text-muted">Votre agenda d'événements autour du digital</p>
            <p>
                <a href="#event" class="btn btn-primary my-2">Les prochains événements</a>
                <a href="{{ path('event_index') }}" class="btn btn-secondary my-2">Tous les événements</a>
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">

            <h2>Les prochains événements</h2>

            <div class="row">
                {% for event in events  %}
                    <div class="col-md-4">
                        {% include 'event/_thumbnail.html.twig' with {'event': event} only %}
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
